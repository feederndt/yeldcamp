<% layout('/layouts/boilerplates') %>

<script>
    const hihi = '<%-process.env.MAP_TOKEN %>'
    
</script> 
<body>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <h1>All Campgrounds</h1>
    <% for(camp of campgrounds){ %> 
       <div class="card mb-3">
            <div class="row">               
                <div class="col-md-4">
                    <% if(camp.images.length > 0) { %> 
                    <img class="img-fluid" style="width: 500px;height: 350px;" src="<%= camp.images[0].path %> " alt="">
                    <% } %> 
                </div>
                
                <div class="col-md-8">
                    <h4 class="card-title"><%= camp.title %></h4>
                    <p class="card-text text-muted"><%= camp.description %></p>
                    <a class="btn btn-primary" href="campgrounds/<%= camp.id %>">View</a>
                </div>
            </div>          
       </div>
    <% } %>
    
    <script>
        const haha = '<%- JSON.stringify(campgrounds)%>'
    </script>
    <script src="/javascripts/clusterMap.js"></script>
    
</body>
</html>
