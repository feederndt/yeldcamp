<% layout('/layouts/boilerplates') %> 
<body>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
        <form action="/campgrounds/<%= camp.id %>?_method=PUT" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title" value="<%= camp.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="location" value="<%=camp.location %>" required>
            </div>
            
            <div class="mb-3">
                <div>
                    <label class="form-label" for="price">Price</label>
                </div>
                <div class="input-group">
                    <span class="input-group-text">$</span>               
                    <input class="form-control" type="text" id="price" name="price" value="<%= camp.price %>" required>
                </div>               
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="description"><%= camp.description %></textarea>
            </div>
            <input type="file" name="image" multiple/>
            <br>
            <div class="text-center">
                <% for(let i = 0; i < camp.images.length; i++) { %>
                    <div class="d-inline-block my-3">
                        <img src="<%= camp.images[i].thumbnail %>" alt="" class="img-thumbnail d-block">
                        <input type="checkbox" id="<%= i %>" value="<%= camp.images[i].filename %>" name="deleteImage[]">
                        <label for="<%= i %>">Delete</label>
                    </div>                 
                <% } %>
                <div>
                    <button type="submit" class="btn btn-primary mt-3">Save</button>
                </div>           
                
            </div> 
        </form>
        </div>
    </div>
    <div>
        <a href="/campgrounds/<%= camp.id %>">Back to Campground</a>
    </div>
</body>
